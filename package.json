{
  "name": "reconnection-service",
  "version": "1.0.0",
  "description": "A microservice to reconnect graphs in DSNP/Frequency",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "npx tsc",
    "start": "env TS_NODE_BASEURL=./dist/src node --inspect -r tsconfig-paths/register dist/src/main.js",
    "start:dev": "set -a ; . .env.dev ; ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start:dev:docker": "npm i && ts-node-dev -r tsconfig-paths/register src/main.ts",
    "docker-build": "docker build -t reconnection-service .",
    "docker-build:dev": "docker-compose -f docker-compose.dev.yaml build",
    "docker-run": "docker build -t reconnection-service-deploy . ; docker run -p 6379:6379 --env-file .env.dev reconnection-service-deploy",
    "docker-run:dev": "docker-compose -f docker-compose.dev.yaml up -d ; docker-compose -f docker-compose.dev.yaml logs -f reconnection-service",
    "docker-stop:dev": "docker-compose -f docker-compose.dev.yaml stop",
    "clean": "rm -Rf dist",
    "lint": "prettier --check ./src && eslint \"./src/**/*.ts\"",
    "lint:fix": "prettier --write ./src && eslint \"./src/**/*.ts\" --fix",
    "pretest": "cp env.template .env",
    "test": "jest --coverage --verbose",
    "chain-setup": "tsx setup/testing/index.ts",
    "reset-chain": "setup/testing/reset_chain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmplicaLabs/reconnection-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/AmplicaLabs/reconnection-service/issues"
  },
  "homepage": "https://github.com/AmplicaLabs/reconnection-service#readme",
  "dependencies": {
    "@bull-board/api": "^5.8.4",
    "@bull-board/express": "^5.8.4",
    "@bull-board/nestjs": "^5.8.4",
    "@bull-board/ui": "^5.8.4",
    "@dsnp/graph-sdk": "^1.1.1",
    "@frequency-chain/api-augment": "^1.11.0",
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/schedule": "^3.0.1",
    "@nestjs/testing": "^9.4.0",
    "@nestjs/typeorm": "^9.0.1",
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-base": "^10.9.1",
    "@polkadot/keyring": "^12.3.2",
    "@polkadot/types": "^10.9.1",
    "@polkadot/util": "^12.3.2",
    "@polkadot/util-crypto": "^12.3.2",
    "axios": "^1.3.6",
    "bullmq": "^5.7.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.1",
    "rxjs": "^7.8.1",
    "time-constants": "^1.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@polkadot/typegen": "10.9.1",
    "@types/jest": "^29.5.2",
    "@types/time-constants": "^1.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/typescript-estree": "6.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "license-report": "^6.4.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.1.3"
  }
}
