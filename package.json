{
  "name": "reconnection-service",
  "version": "1.0.0",
  "description": "A microservice to reconnect graphs in DSNP/Frequency",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "nest build",
    "build:swagger": "echo 'webhook-specification/v1.0/connections.yaml'",
    "generate-swagger-ui": "npx --yes @redocly/cli build-docs webhook-specification/v1.0/connections.yaml --output=./docs/index.html",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:api": "nest start",
    "start:api:watch": "nest start --watch",
    "start:api:prod": "node dist/main.js",
    "start:api:dev": "set -a ; . .env ; nest start",
    "start:api:debug": "set -a ; . .env ; nest start --debug --watch",
    "docker-build": "docker build -t reconnection-service .",
    "docker-build:dev": "docker compose build",
    "docker-run": "docker build -t reconnection-service-deploy . ; docker run -p 6379:6379 --env-file .env reconnection-service-deploy",
    "docker-run:dev": "docker compose up -d ; docker compose -f docker compose.dev.yaml logs",
    "docker-stop:dev": "docker compose stop",
    "clean": "rm -Rf dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest  --coverage --verbose",
    "chain-setup": "tsx setup/testing/index.ts",
    "reset-chain": "setup/testing/reset_chain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmplicaLabs/reconnection-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/AmplicaLabs/reconnection-service/issues"
  },
  "homepage": "https://github.com/AmplicaLabs/reconnection-service#readme",
  "dependencies": {
    "@amplica-labs/frequency-scenario-template": "^1.0.0",
    "@bull-board/api": "^5.21.3",
    "@bull-board/express": "^5.17.0",
    "@bull-board/nestjs": "^5.17.0",
    "@bull-board/ui": "^5.17.0",
    "@dsnp/graph-sdk": "^1.1.3",
    "@frequency-chain/api-augment": "^1.11.1",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/testing": "^10.3.8",
    "@nestjs/typeorm": "^10.0.2",
    "@polkadot/api": "^10.12.4",
    "@polkadot/api-base": "^10.12.4",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/types": "^10.12.4",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@songkeys/nestjs-redis": "^10.0.0",
    "axios": "^1.6.8",
    "bullmq": "^5.7.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.4.1",
    "joi": "^17.13.1",
    "rxjs": "^7.8.1",
    "time-constants": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^10.3.2",
    "@types/jest": "^29.5.12",
    "@types/time-constants": "^1.0.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "license-report": "^6.5.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  }
}
